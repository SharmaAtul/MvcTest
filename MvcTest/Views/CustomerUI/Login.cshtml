@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    
    <script src="~/Scripts/angular.js"></script>

    <link href="~/Scripts/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/ui-bootstrap-custom-tpls-0.13.2.min.js"></script>

    <script src="~/ModelJs/Login.js"></script>
    <script src="~/ModelJs/AppConfig.js"></script>
    <link href="~/Scripts/custom.css" rel="stylesheet" />
    
</head>
    <script type="text/javascript" language="javascript">
        var app = angular.module("myapp", ['ui.bootstrap'])

        app.controller("loginModel", loginModel);
        app.factory("rememberMe", rememberMe);
        app.factory("encryptModule", encryptModule);
        app.factory('authInterceptor', authInterceptor);
        
        app.config(function ($httpProvider) {
            $httpProvider.interceptors.push('authInterceptor');
        });
    </script>
<body ng-app="myapp">
    
    <div class="container" ng-controller="loginModel">
        <form class="form-horizontal" name="userLoginForm">
            <div class="form-group">
                <label class="control-label col-xs-2">User Name</label>
                <div class="col-xs-4">
                    <input type="text" name="userName" class="form-control"  ng-model ="UserLogin.username" placeholder="Enter User Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Password</label>
                <div class="col-xs-4">
                    <input type="password" name="userName" class="form-control"  ng-model ="UserLogin.password" placeholder="Enter Password"/>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-xs-2"></label>
                <div class="col-xs-5">
                    <label >
                    <input type="checkbox" name="remember" ng-click="rememberMeChk()" ng-model="remember"> &nbsp; Remember Me
                </label>
                </div>
                <div class="col-xs-">
                    <button class="btn btn-primary" ng-hide="enableEdit" type="button" value="Cancel" ng-click="Login()" >Login</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2"></label>
                
            </div>
        </form>
    </div>
</body>
</html>
